<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tool:text="@string/example_company"
        style="@style/TextPrimary"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_company"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tool:text="@string/example_location"
        style="@style/TextPrimary"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_location"/>

    <TextView
        android:id="@+id/tv_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tool:text="@string/example_repository"
        style="@style/TextPrimary"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_repository"/>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tool:text="@string/example_follow"
        style="@style/TextPrimary"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_follow"/>



</LinearLayout>