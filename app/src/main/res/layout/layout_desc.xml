<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Universitas Gadjah Mada"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_company"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Yogyakarta"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_location"/>

    <TextView
        android:id="@+id/tv_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="23 Repositories"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_repository"/>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="23 Following | 92 Followers"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_follow"/>



</LinearLayout>