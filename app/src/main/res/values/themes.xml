<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_bg</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>

        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/light_bg</item>
    </style>

    <style name="TextPrimaryBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_text_secondary</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>